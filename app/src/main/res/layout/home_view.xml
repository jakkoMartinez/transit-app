<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:contentDescription="@string/banner"
            android:scaleType="fitStart"
            android:src="@drawable/home_banner" />

        <TextView
            android:id="@+id/home_view_alertsTv"
            style="@style/ViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/home_alerts" />

        <TextView
            android:id="@+id/home_view_dateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/date_unavailable" />

        <TextView
            android:id="@+id/home_view_timeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/time_unavailable" />

        <ListView
            android:id="@+id/advisory_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>