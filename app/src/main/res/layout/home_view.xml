<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:id="@+id/home_banner_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/home_banner"
                android:adjustViewBounds="true"
                android:contentDescription="@string/banner"
                android:elevation="1dp" />

            <TextView
                android:id="@+id/home_view_alertsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/mp_primary_light"
                android:elevation="1dp"
                android:gravity="center_horizontal"
                android:text="@string/home_alerts"
                android:textColor="@color/mp_primary_text"
                android:textSize="15sp"
                android:layout_below="@+id/home_banner_imageView"/>

            <TextView
                android:id="@+id/home_view_timeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/home_view_alertsTv"/>

    <ListView
        android:id="@+id/advisory_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_view_timeTv"
        android:layout_margin="7dp"
        android:layout_marginBottom="23dp"
        android:background="@color/mp_primary_light"
        android:elevation="2dp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/home_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:visibility="visible" />

</RelativeLayout>
