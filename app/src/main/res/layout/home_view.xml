<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home_container">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_banner"
            android:src="@drawable/home_banner"
            android:adjustViewBounds="true"
            android:contentDescription="@string/banner"
            android:elevation="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/home_banner">
            <TextView
                android:id="@+id/home_view_alertsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/mp_primary_dark"
                android:background="@color/mp_primary_light"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:text="@string/home_alerts" />

            <TextView
                android:id="@+id/home_view_timeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/update_unavailable" />

            <ListView
                android:id="@+id/advisory_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_marginBottom="23dp"
                android:background="@color/mp_primary_light"
                android:elevation="2dp"
                />
        </LinearLayout>
</RelativeLayout>