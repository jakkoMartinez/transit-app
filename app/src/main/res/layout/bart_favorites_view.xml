<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="50dp">

    <TextView
        style="@style/ViewTitle"
        android:id="@+id/bartFavorites_title_tV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="@string/action_favorites"/>


    <LinearLayout
        android:id="@+id/bartFavorites_linearLayout"
        android:layout_below="@+id/bartFavorites_title_tV"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bartFavorites_origin_tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/favorite_origin"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/bartFavorites_destination_tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/favorite_destination"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_search"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/favorite_options" />
    </LinearLayout>

    <TextView
        android:id="@+id/bartFavorites_error_tV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bartFavorites_linearLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/bartFavorites_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/bartFavorites_linearLayout"/>
</RelativeLayout>
