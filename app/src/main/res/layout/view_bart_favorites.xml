<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/bartFavorites_origin_tV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_origin"
        app:layout_constraintBottom_toTopOf="@+id/bartFavorites_recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/bartFavorites_destination_tV"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/bartFavorites_destination_tV"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="48dp"
        android:text="@string/favorite_destination"
        app:layout_constraintBottom_toTopOf="@+id/bartFavorites_recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/bartFavorites_options_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/bart_favorites_search_tv"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/favorite_search"
        app:layout_constraintBottom_toTopOf="@+id/bartFavorites_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/bartFavorites_options_tv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="4dp"
        android:text="@string/favorite_options"
        app:layout_constraintBottom_toTopOf="@+id/bartFavorites_recyclerView"
        app:layout_constraintEnd_toStartOf="@+id/bart_favorites_search_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bartFavorites_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/bartFavorites_error_tV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/bart_favorites_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bartFavorites_recyclerView" />
</android.support.constraint.ConstraintLayout>
