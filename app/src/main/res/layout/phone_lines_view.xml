<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:id="@+id/phone_lines_container">

    <android.support.v7.widget.CardView
        style="@style/CardViewRiderz"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:background="@color/mp_primary_light">

            <TextView
                style="@style/ViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneLines_title" />

            <TextView
                style="@style/TextViewRiderz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneLines_911"
                android:layout_marginBottom="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
                <TextView
                    android:id="@+id/bart_lines_police_tv"
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/phoneLines_bartPolice"/>

                <TextView
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:autoLink="phone"
                    android:text="@string/phoneLines_police_number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
                <TextView
                    android:id="@+id/bart_lines_comments_tv"
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phonesLines_bartComplaints"/>

                <TextView
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:autoLink="phone"
                    android:text="@string/phoneLines_bartComplaints_number" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
                <TextView
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phonesLines_lostFound"/>

                <TextView
                    style="@style/TextViewRiderz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:autoLink="phone"
                    android:text="@string/phoneLines_bartLostFound_number" />
            </RelativeLayout>

            <TextView
                style="@style/TextViewRiderz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneLines_bartLink"/>

            <TextView
                style="@style/TextViewRiderz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/phoneLines_bartWebsite"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>