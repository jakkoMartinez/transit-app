<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:background="@color/mp_primary_light">

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/help_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_view_title"
                android:textAlignment="center"
                android:textColor="@color/mp_primary_text"/>

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Will there be features added in the future?" />

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Yes! Next up is MUNI :)" />

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Will this app be on iOS soon?" />

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Unfortunately not at the moment, but it will be considered if demand is high enough." />

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: Is this app open source?" />

            <TextView
                android:id="@+id/textView3"
                style="@style/HelpTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Yes! This is a non-profit, open source app. Developers can go to this link below for more information." />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://github.com/rjsuzuki/transit-app"
                android:autoLink="web"/>

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Q: What if I found a problem?" />

            <TextView
                style="@style/HelpTextView"
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: If you have found an application problem that you would like to report, please click the button just below and send us an email :)" />

            <Button
                android:id="@+id/help_report_button"
                style="@style/ButtonAppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/help_report_button" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>