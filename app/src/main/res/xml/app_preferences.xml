<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <PreferenceCategory
        android:title="@string/preference_title">
        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="@string/preference_checkbox_title"
            android:defaultValue="@string/preference_checkbox_value"/>
        <EditTextPreference
            android:key="edittext_preference"
            android:title="@string/preference_edittext_title"
            android:summary="@string/preference_edittext_summary"
            android:dialogTitle="@string/preference_edittext_dialog"
            android:dependency="checkbox_preference" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_category_title">
        <ListPreference
            android:key="list_preference"
            android:title="@string/preference_list_title"
            android:dialogTitle="@string/preference_list_dialog"
            android:entries="@array/preference_list_entries"
            android:entryValues="@array/preference_list_entry_value" />
        <Preference
            android:title="@string/preference_intent_title">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://codepath.com/" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="something">
        <Preference
            android:key="sample_key"
            android:title="Button"></Preference>
    </PreferenceCategory>

</PreferenceScreen>