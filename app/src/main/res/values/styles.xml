<resources>

    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mp_primary</item>
        <item name="colorPrimaryDark">@color/mp_primary_dark</item>
        <item name="colorAccent">@color/mp_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawerBackground">
        <item name="colorPrimary">@color/mp_primary_light</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonAppTheme">
        <item name="android:background">@color/mp_accent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonAppTheme2">
        <item name="android:background">@color/mp_primary_light</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonAppTheme3">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">#FF4081</item>
    </style>

    <!-- Text Styles -->
    <style name="ButtonTitle">
        <item name="android:textColor"></item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ViewTitle" parent="android:TextAppearance.Large">
        <item name="android:textColor"></item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextViewRiderz">
        <item name="android:textColor"></item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CardViewRiderz">
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">1dp</item>
    </style>

</resources>
